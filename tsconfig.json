{
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
